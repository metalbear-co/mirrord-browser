{
    "name": "mirrord-browser",
    "version": "0.1.0",
    "description": "Browser extension for mirrord",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "test": "jest",
        "fmt": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "check": "pnpm run format:check && pnpm run lint",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "prepare": "husky"
    },
    "keywords": [
        "mirrord"
    ],
    "author": "metalbear.co",
    "license": "MIT",
    "devDependencies": {
        "@crxjs/vite-plugin": "^2.0.0",
        "@playwright/test": "^1.58.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.2",
        "@types/chrome": "^0.0.323",
        "@types/jest": "^29.5.14",
        "@types/react": "^19.2.10",
        "@types/react-dom": "^19.2.3",
        "@typescript-eslint/parser": "^8.33.1",
        "@vitejs/plugin-react": "^5.1.2",
        "class-variance-authority": "^0.7.1",
        "eslint": "^9.28.0",
        "eslint-plugin-ts": "^1.0.0",
        "husky": "^9.1.7",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^30.0.0",
        "lint-staged": "^16.2.7",
        "prettier": "^3.5.3",
        "ts-jest": "^29.3.4",
        "tsx": "^4.21.0",
        "typescript": "^5.8.3",
        "vite": "^5.4.19"
    },
    "dependencies": {
        "@metalbear/ui": "^0.1.4",
        "posthog-js": "^1.232.4",
        "react": "^19.2.4",
        "react-dom": "^19.2.4"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.{json,md,yaml,yml,html,css}": [
            "prettier --write"
        ]
    }
}
